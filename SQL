#Задание 1

SELECT "Couriers".login,
COUNT (*)
FROM "Couriers"
INNER JOIN "Orders" ON "Couriers".id = "Orders"."courierId"
WHERE "Orders"."inDelivery" = true
GROUP BY "Couriers".login;

#Задание 2

SELECT "track",
CASE
WHEN "finished" = True THEN '2'
WHEN "cancelled" = True THEN '-1'
WHEN "inDelivery" = True THEN '1'
ELSE '0'
END
FROM "Orders";

